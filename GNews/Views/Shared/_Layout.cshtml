<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Goal News</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/select2.min.css")
    @Styles.Render("~/Content/bootstrap-datepicker3.min.css")
    @Scripts.Render("~/bundles/modernizr")
    <link runat="server" rel="icon" href="~/favicon.ico" type="image/ico" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"><i class="fa fa-newspaper-o" style="color: rgb(21, 43, 59); font-size: 21px; box-sizing: content-box; line-height: 39px; text-align: center; width: 39px; height: 39px; display: inline-block; overflow: hidden; border-radius: 50%; background-color: rgb(255, 255, 255);margin-top:11px;padding-top:2px"></i>
                @Html.ActionLink("Goal News", "Index", "News", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Noticias", "Index", "News")</li>
                        <li>@Html.ActionLink("Empleados", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Clientes", "Index", "Clients")</li>
                        <li>@Html.ActionLink("Peticiones", "Index", "Requests")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/select2.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
