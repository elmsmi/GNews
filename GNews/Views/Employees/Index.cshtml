@model IEnumerable<GNews.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Gestionar Empleados</h2>

<p>
    @Html.ActionLink("Añadir empleado", "Create",null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EmployeeID }, new { @class = "btn btn-default btn-xs" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.EmployeeID }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.EmployeeID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
