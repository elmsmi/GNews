@model GNews.Models.New

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Noticia</h2>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NewText)
        </dt>

        <dd>
            @Html.Raw(HttpUtility.HtmlDecode(@Model.NewText))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-lg-offset-2">
            <input type="submit" value="Borrar" class="btn btn-danger" />
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
